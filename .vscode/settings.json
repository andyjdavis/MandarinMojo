{
    "tslint.enable": true,
    "tslint.autoFixOnSave": true,
    "tslint.alwaysShowRuleFailuresAsWarnings": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js.map": true,
        "**/*.js": {
            "when": "$(basename).ts"
        }
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true
    }
}